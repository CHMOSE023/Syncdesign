<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Syncdesign.Ui.Controls"> 

    <Style TargetType="{x:Type local:InlineEditableText}">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="Gray"/>
        <Setter Property="Cursor" Value="IBeam"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:InlineEditableText}">
                    <Border  x:Name="Bd"  CornerRadius="6"  BorderThickness="0" Background="Transparent" Padding="3" >
                        <Grid>
                            <!-- 显示态 -->
                            <TextBlock x:Name="PART_Display"
                                   Text="{TemplateBinding Text}"
                                   Foreground="{TemplateBinding Foreground}"            
                                   Margin="0"
                                   VerticalAlignment="Center"/>
                            <!-- Placeholder -->
                            <TextBlock x:Name="PART_Placeholder"
                                   Text="{TemplateBinding Placeholder}"
                                   Foreground="#999999"
                                   VerticalAlignment="Center" 
                                   IsHitTestVisible="False"
                                   Margin="0"
                                   Visibility="Collapsed"/>
                            <!-- 编辑态 -->
                            <TextBox x:Name="PART_Editor"
                                 Text="{Binding Text,
                                        RelativeSource={RelativeSource TemplatedParent},
                                        UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="{TemplateBinding FontSize}"
                                 BorderThickness="0"
                                 Margin="0"                               
                                 Visibility="Collapsed"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>                        
                        <!-- 空文本显示 Placeholder -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsEditing" Value="False"/>
                                <Condition Property="Text" Value=""/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="PART_Placeholder"
                                    Property="Visibility"
                                    Value="Visible"/>
                        </MultiTrigger>

                        <!-- 编辑态 -->
                        <Trigger Property="IsEditing" Value="True">
                            
                            <Setter TargetName="Bd" 
                                    Property="Background"   
                                    Value="White"/>
                            
                            <Setter TargetName="PART_Display"
                                    Property="Visibility"
                                    Value="Collapsed"/>
                            <Setter TargetName="PART_Placeholder"
                                    Property="Visibility"
                                    Value="Collapsed"/>
                            <Setter TargetName="PART_Editor"
                                    Property="Visibility"
                                    Value="Visible"/>
                            <Setter TargetName="PART_Editor"
                                    Property="FocusManager.FocusedElement"
                                    Value="{Binding RelativeSource={RelativeSource Self}}"/>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>