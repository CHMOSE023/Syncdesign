<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:view="clr-namespace:Syncdesign.Presentation.View" 
    xmlns:vm="clr-namespace:Syncdesign.Presentation.ViewModel"
    
    >

    <!--使用数据填充模板-->
    <DataTemplate DataType="{x:Type vm:ContainerViewModel}">
        <view:ContainerView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:SidebarViewModel}">
        <view:SidebarView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:HeaderViewModel}">
        <view:HeaderView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:UserListViewModel}">
        <view:UserListView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:MessageListViewModel}">
        <view:MessageListView />
    </DataTemplate>

</ResourceDictionary>