<UserControl x:Class="Syncdesign.Presentation.View.HeaderView" 
             xmlns:bim="http://bimhub.top/syncdesign/2026/xaml" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"              
             xmlns:vm="clr-namespace:Syncdesign.Presentation.ViewModel"                  
             mc:Ignorable="d" 
             Background="LightGray"
             d:DesignHeight="120" d:DesignWidth="500">     
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <bim:ControlsDictionary/>
                <bim:ThemesDictionary  />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="3">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Width="60" Height="60"  Grid.Column="0" >
                <Image Source="pack://application:,,,/Syncdesign.Ui;component/Resources/Images/avatar.jpg" 
                       Stretch="UniformToFill">
                    <Image.Clip>
                        <EllipseGeometry Center="30,30" RadiusX="30" RadiusY="30" />
                    </Image.Clip>
                </Image>
            </Border>
            <Grid Grid.Column="1" Margin="6 0 0 0" >
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition />
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock  Grid.Row="0" Margin="4 3 0 0" Text="{Binding UserName}" FontWeight="Bold" Foreground="Black" FontSize="14"/>
                <!-- 单击修改    -->
                <bim:InlineEditableText  
                    Grid.Row="1"
                    Text="{Binding Signature}"
                    Placeholder="个性签名..."   
                    FontSize="12" 
                    />
                <!-- 快捷命令按钮 -->
                <StackPanel Grid.Row="2"  Orientation="Horizontal" VerticalAlignment="Center" >
                    <bim:Button Style="{StaticResource SyncdesignUiNavButton}">                        
                        <bim:SymbolIcon FontSize="20"   Symbol="Archive24"  />
                    </bim:Button>
                    <bim:Button Style="{StaticResource SyncdesignUiNavButton}">
                        <bim:SymbolIcon FontSize="20"   Symbol="AppsAddIn24"  />
                    </bim:Button>
                    <bim:Button Style="{StaticResource SyncdesignUiNavButton}">
                        <bim:SymbolIcon FontSize="20"  Symbol="CloudArrowUp24"  />
                    </bim:Button>
                    <bim:Button Style="{StaticResource SyncdesignUiNavButton}">
                        <bim:SymbolIcon FontSize="20" Symbol="CloudArrowDown24"  />
                    </bim:Button>
                </StackPanel>
            </Grid>
        </Grid>
        <!--底部搜索-->
        <Grid Grid.Row="1" Margin="3" Height="26" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="26" />
            </Grid.ColumnDefinitions> 
            <bim:SearchBox Margin="0 0 6 0"                            
                           Text="{Binding Keyword, UpdateSourceTrigger=PropertyChanged}"
                           ItemsSource="{Binding Signatures}"
                           SearchCommand="{Binding SearchCommand}"
                           SelectedCommand="{Binding SelectedCommand}"
                           Delay="50"
                           />
            <bim:Button Grid.Column="1"  Width="26" Height="26" Style="{StaticResource SyncdesignUiButton}">
                <bim:SymbolIcon FontSize="20"  Symbol="Add12"  />
            </bim:Button>
        </Grid>
    </Grid>
</UserControl>
