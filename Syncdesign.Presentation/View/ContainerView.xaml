<UserControl x:Class="Syncdesign.Presentation.View.ContainerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Syncdesign.Presentation.View"
             xmlns:resources="clr-namespace:Syncdesign.Presentation.Resources"
             xmlns:vm="clr-namespace:Syncdesign.Presentation.ViewModel"   
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <resources:ViewTemplateSelector x:Key="DynamicSelector" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <ContentControl  Content="{Binding CurrentDynamicVM,FallbackValue={x:Null}}"
                         ContentTemplateSelector="{StaticResource DynamicSelector}" 
                         /> 
    </Grid>
</UserControl>
